<label>Please enter email to invite Writer</label>
<%= form_for(@user, url: { action: "welcome"}, html: { class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Invite Writer", class: "btn btn-default" %>
    </div>
  </div>
 
<% end  %>
