<%= form_for(@writer) do |f| %>
  <% if @writer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@writer.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @writer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :first_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :last_name %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :screen_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :screen_name %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gender, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :gender %>
    </div>
  </div>
  <%= f.fields_for :user do |rf| %>
    <div class="form-group">
      <%= rf.label :email, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= rf.text_field :email %>
      </div>
    </div>
    <div class="form-group">
      <%= rf.label :password, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= rf.password_field :password %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Submit", class: "btn btn-default" %>
    </div>
  </div>
<% end %>
